<?xml version="1.0" encoding="utf-8"?>
<resources>


        <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
            <item name="colorPrimary">@color/theme_primary</item>
            <item name="colorAccent">@color/theme_accent</item>
            <item name="colorPrimaryDark">@color/theme_primary_dark</item>
            <item name="android:windowContentTransitions">true</item>
            <item name="android:windowExitTransition">@transition/grid_exit</item>
            <item name="android:windowEnterTransition">@android:transition/slide_right</item>
            <item name="android:windowReenterTransition">@android:transition/explode</item>
        </style>

        <style name="Theme.Bacon.Detail">
            <item name="android:statusBarColor">@android:color/transparent</item>
        </style>


</resources>